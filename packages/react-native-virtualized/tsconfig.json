{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "types": [
      "react"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}
